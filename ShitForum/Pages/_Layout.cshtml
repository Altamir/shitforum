<!DOCTYPE html>
@inject ShitForum.SettingsObjects.ForumSettings ForumSettings
<html lang="en-gb">
    <head>
        <meta charset="utf-8" />
        <meta name="description" content="The worst forum in the world">
        <meta name="keywords" content="forum,awful,anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - @ForumSettings.ForumName</title>

        <link rel="stylesheet" href="~/lib/bulma/css/bulma.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/solid.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <script src="https://www.google.com/recaptcha/api.js"></script>
    </head>
<body>

<nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
            <a class="navbar-item" asp-page="/Index">Home</a>
            <a class="navbar-item" asp-page="/About">About</a>
        </div>
    </div>
</nav>
<div class="container">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; 2018 - @ForumSettings.ForumName. Powered by <a href="https://github.com/luhis/shitforum">ShitForum</a>.</p>
        <p id="cookie-warning">This website uses cookies. By continuing to use our site, you agree to our use of cookies</p>
        <p>The content posted is not owned or generated by @ForumSettings.ForumName, but rather by @(ForumSettings.ForumName)'s users.</p>
    </footer>
</div>

<script src="~/js/site.min.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
