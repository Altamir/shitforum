@page
@model ShitForum.Pages.BanUserModel
@{
    ViewData["Title"] = "BanUser";
}

<h2>Ban User</h2>

<form method="post">
    <div class="form-group">
        Reason:
        <input class="form-control" asp-for="Reason" type="text" placeholder="reason" />
    </div>
    <div class="form-group">
        Expiry:
        <input class="form-control" asp-for="Expiry" type="date" placeholder="reason"/>
    </div>
    <input class="btn btn-primary" type="submit" />
</form>