@page
@model ShitForum.Pages.BoardModel
@{
    ViewData["Title"] = "Board";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.BoardName</li>
    </ol>
</nav>

@{
    foreach (var thread in Model.Threads)
    {
        <div class="row">
            <div class="col">
                @thread.FirstPost.Name
                @thread.FirstPost.Created
                No. <a asp-page="Thread" asp-route-id="@thread.ThreadId">@thread.ThreadId</a>
            </div>
        </div>
        <div class="row">

            <div class="col-md-3">
                <a asp-page="Thread" asp-route-id="@thread.ThreadId">@thread.Subject</a>
            </div>
        </div>
        @if (thread.FirstPost.File != null)
        {<a asp-page="Thread" asp-route-id="@thread.ThreadId">
                <img src="@Url.Action("GetPostThumbnail", "Images", new { id = thread.FirstPost.Id })" />
            </a>
        }
        <div class="row">
            <div class="col-md-12">
                @thread.FirstPost.Comment
            </div>
        </div>
        <div class="row">
            <div class="col">
                @($"{thread.PostCount} replies and {thread.ImageCount} images omitted.")
                <a asp-page="Thread" asp-route-id="@thread.ThreadId">Click here</a> to view.
            </div>
        </div>
        <hr />
    }
}

